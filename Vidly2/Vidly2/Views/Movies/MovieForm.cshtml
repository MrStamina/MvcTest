@model Vidly2.Views.ViewModels.MoviesFormViewModel
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title </h2>

@using (Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
        <label for="Name">Titre du Film</label>
        @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="ReleaseDate">Date de sortie</label>
        @Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="GenreId">Genre</label>
        @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genre, "Id", "Libelle"),  new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="ReleaseDate">Stock</label>
        @Html.TextBoxFor(m => m.Movie.Stock, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m=> m.Movie.Id)
    <button type="submit" class="btn btn-primary">Enregistrer</button>

}

